<% if current_user.admin? %>
<div class="span12">
  <ul class="years">
    <% @m.each do |year| %>
        <li><%= link_to_unless_current year, cashc_url(:year => year)%></li>
    <% end %>
  </ul>
  <br/>
  <br/>
  <div id="cashc_table">
    <h3>Данные по банкам и по кассе - <%= Russian::strftime(@cashc.first.DAT.to_date, "%d %B %Y") if @cashc.first %></h3>
    <div class="row-fluid">
      <div class="span2">
        <%= link_to Russian::strftime(@dat - 1.day, "%d %B %Y"), cashc_prev_day_url(:dat => @dat), remote: true, :id => "prev_day" %>
      </div>
      <div class="span8">
        <ul class="years ul_days">
          <li><%= link_to Russian::strftime(Time.now - 1.day, "%d %B %Y"), cashc_url()%></li>
          <li><%= link_to_unless_current Russian::strftime(Time.now - 2.day, "%d %B %Y"), cashc_url(:day => 1)%></li>
          <li><%= link_to_unless_current Russian::strftime(Time.now - 3.day, "%d %B %Y"), cashc_url(:day => 2)%></li>
          <li><%= link_to_unless_current Russian::strftime(Time.now - 4.day, "%d %B %Y"), cashc_url(:day => 3)%></li>
        </ul>
      </div>

      <div class="span2">
        <%= link_to Russian::strftime(@dat + 1.day, "%d %B %Y"), cashc_next_day_url(:dat => @dat), remote: true, :id => "next_day" %>
      </div>
    </div>

    <table class="table table-hover">
      <tr>
        <th>Наименование</th>
        <th>Сбербанк</th>
        <th>Россельхоз банк</th>
      </tr>
      <%= render :partial => "cash/cash_item", :collection => @cashc, :as => :item  %>
    </table>
  </div>
  
  <h3>"Виктория - С" Данные по банкам и по кассе  - <%= Russian::strftime(@cashc.first.DAT.to_date, "%d %B %Y") if @cashc.first %></h3>
  <table class="table table-striped table-hover">
    <tr>
      <th>Наименование</th>
      <th>Сбербанк</th>
      <th>Россельхоз банк</th>
    </tr>
    <%= render :partial => "cashc/cashc_item", :collection => @cashc, :as => :item  %>
  </table>
</div>
<% else %>
    <h2>Недостаточно прав</h2>
<% end %>