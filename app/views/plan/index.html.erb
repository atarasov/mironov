<% if current_user.admin? %>
<% content_for :sidebar do %>
    <div class="span3">
      <div class="well sidebar-nav">
        <%= render_navigation :level => 2 %>
      </div><!--/.well -->
    </div><!--/span-->
<% end %>
<div class="span9">

<h2>План</h2>
  <ul class="years">
    <li><%= link_to "Все года", plan_url %></li>
  <% @m.each do |year| %>
  <li><%= link_to_unless_current year, plan_url(:year => year)%></li>
  <% end %>
  </ul>
  <br/>
  <br/>
<table class="table table-striped">
  <tr>
    <th>Дата</th>
    <th>Код</th>
    <th>Наименование</th>
    <th>План на месяц</th>
    <th>Выполненно на данное число</th>
    <th>Выполненно за текущий день</th>
  </tr>
  <%= render :partial => "plan/plan_item", :collection => @plans, :as => :item  %>
</table>
<%= will_paginate @plans, :class => "flickr_pagination", :next_label => ">>", :previous_label => "<<" %>
</div>
<% else %>
    <h2>Недостаточно прав</h2>
<% end %>
