<tr >
  <td><%= link_to item.NAIM, planshow_url(item.N) %></td>
  <td class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion-plan" href="#item<%= item.N %>"><%= item.PLM %></td>
  <td class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion-plan" href="#item<%= item.N %>"><%= item.PLS %></td>
  <td class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion-plan" href="#item<%= item.N %>"><%= item.VRS %></td>
  <td class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion-plan" href="#item<%= item.N %>"><%= item.VRD %></td>
  <td class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion-plan" href="#item<%= item.N %>"><%= item.OST %></td>
</tr>

<tr>
  <td colspan="6" class="more">
    <div id="item<%= item.N %>" class=" accordion-body collapse">
      <div class="plan-progress">
        <% if item.PLM.to_i > 0 %>

            <div class="progress">
              <div class="bar bar-success" style="width: <%= number_to_percentage((item.PLS / item.PLM) *100, :precision => 0) %>;">План
                текущий - <%= number_to_percentage((item.PLS / item.PLM) *100, :precision => 0) %></div>
              <div class="bar bar-danger" style="width: <%= number_to_percentage( 100 - (item.PLS / item.PLM) *100, :precision => 0) %>;">
                План осталось - <%= number_to_percentage(100 - (item.PLS / item.PLM) *100, :precision => 0) %></div>
            </div>

        <% else %>
            Нет данных
        <% end %>
      </div>
      <div class="fact-progress">
        <% if item.PLS.to_i > 0 %>
            <div class="progress">
              <div class="bar bar-success" style="width: <%= number_to_percentage((item.VRS / item.PLS) *100, :precision => 0) %>;">Факт
                текущий - <%= number_to_percentage((item.VRS / item.PLS) *100, :precision => 0) %></div>
              <div class="bar bar-danger" style="width: <%= number_to_percentage( 100 - (item.VRS / item.PLS) *100, :precision => 0) %>;">Факт
                осталось -  <%= number_to_percentage(100 - (item.VRS / item.PLS) *100, :precision => 0) %></div>
            </div>
        <% else %>
            Нет данных
        <% end %>
      </div>

    </div>
  </td>
</tr>